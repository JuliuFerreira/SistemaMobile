<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.How" parent="Theme.Material3.DayNight.NoActionBar">
        <!--Primary brand color. -->
        <item name="colorPrimary">@color/color_default</item>
        <item name="colorPrimaryVariant">@color/color_default</item>
        <item name="colorOnPrimary">@color/white</item>
        <!--Secondary brand color.-->
        <item name="colorSecondary">@color/color_default</item>
        <item name="colorSecondaryVariant">@color/color_default</item>
        <item name="colorOnSecondary">@color/black</item>

        <!--Status bar color-->
        <item name="android:statusBarColor" tools:targerApi="l">?attr/colorPrimaryVariant</item>

        <item name="android:windowBackground">@color/color_default</item>

    </style>

    <style name="Theme.How" parent="Base.Theme.How" />

    <style name="CustonTabLayout" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>     
    </style>
    
    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>